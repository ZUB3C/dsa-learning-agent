# LLM Settings
GIGACHAT_API_KEY=your_gigachat_api_key_here
GIGACHAT_MODEL=ai-sage/GigaChat3-10B-A1.8B
GIGACHAT_BASE_URL=https://foundation-models.api.cloud.ru/v1

LLM_TEMPERATURE=0.2
TIMEOUT_S=60

# ChromaDB
CHROMA_PERSIST_DIRECTORY=.chromadb
CHROMA_COLLECTION_NAME=aisd_materials

# RAG
RAG_TOP_K=3

# Web Search (ReActive Agent)
WEB_SEARCH_ENABLED=true
WEB_SEARCH_PROVIDER=4get
WEB_SEARCH_BASE_URL=https://4get.sijh.net
WEB_SEARCH_SCRAPER=google
WEB_SEARCH_RESULTS_LIMIT=5
WEB_CONTENT_FETCH_ENABLED=true
WEB_CONTENT_MAX_LENGTH=5000

# Database
DATABASE_URL=sqlite+aiosqlite:///./app.db

# Database population settings
PDF_CHUNK_SIZE=1000
PDF_CHUNK_OVERLAP=200
